{
  "name": "nb03-moonshot-team1",
  "version": "0.1.0",
  "description": "Moonshot: 팀 협업을 위한 확장 가능한 프로젝트 & 일정 관리 서비스",
  "main": "dist/server.js",
  "author": "Codeit NB03 Team 1",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/codeit-moonshot/nb03-moonshot-team1.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:be\" \"npm run dev:fe\"",
    "dev:be": "cross-env NODE_ENV=development nodemon --watch src --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "dev:fe": "cross-env NODE_ENV=development npm run dev --prefix frontend",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "seed": "ts-node -r tsconfig-paths/register src/prisma/seed.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write .",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "start:be": "cross-env NODE_ENV=production pm2 start dist/server.js --name moonshot-be",
    "start:fe": "cross-env NODE_ENV=production pm2 start npm --name moonshot-fe -- run start --prefix frontend",
    "start:all": "npm run start:be && npm run start:fe"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "cron": "^4.3.3",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "file-type": "^21.0.0",
    "googleapis": "^159.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "xss": "^1.0.15",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#constants/*": "./src/constants/*",
    "#crons/*": "./src/crons/*",
    "#errors/*": "./src/errors/*",
    "#libs/*": "./src/libs/*",
    "#modules/*": "./src/modules/*",
    "#middlewares/*": "./src/middlewares/*",
    "#prisma/*": "./src/prisma/*",
    "#routes/*": "./src/routes/*",
    "#uploads/*": "./uploads/*",
    "#utils/*": "./src/utils/*"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
